@{
    ViewBag.Title = "Замовлення товару";
}

<h2>Замовлення товару</h2>

<form asp-action="SelectPizza" method="post">
    <div>
        <label for="quantity">Скільки одиниць товару ви бажаєте замовити?</label>
        <input type="number" id="quantity" name="quantity" min="1" required />
    </div>
    <button type="submit">Далі</button>
</form>
